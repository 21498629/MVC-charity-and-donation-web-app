@using u21498629_HW04.Models

@{
    ViewBag.Title = "Donate";
}

<style>
    .active {
        width: 500px;
        height: 500px;
        margin: auto;
    }
</style>

<h2>Donate</h2>

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="background-color: teal">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item">
            <img src="~/Images/Donate.jfif" alt="Picture" class="d-block">
        </div>

        <div class="item active">
            <img src="~/Images/Basket.jfif" alt="Picture" class="d-block">
        </div>

        <div class="item">
            <img src="~/Images/Donations.jpg" alt="Picture" class="d-block">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />

<!--Button to donation form page-->
<div class="row" style="margin: 1px;">
    <a class="btn-lg btn-primary" href="@Url.Action("Donation", "Home")" style="background-color: purple">Donate</a>
</div>
<br />

@section Scripts {

    <script type="text/javascript" src="@Url.Content("~/Scripts/Add/add.js")" asp-append-version="true"></script>
}

@Scripts.Render("~/bundles/bootstrap")